<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="?android:attr/actionBarSize"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Topic"
                    android:padding="24dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="22sp" />

                <EditText
                    android:id="@+id/imagesList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Images Links one in a row"
                    android:minLines="2"
                    android:padding="24dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/news_topic_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="80dp"
                    android:autoLink="all"
                    android:hint="Full text Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed convallis velit id diam hendrerit vehicula. Sed semper tortor tempus risus sodales, sed vulputate justo vulputate. Donec augue neque, maximus eu dui in, iaculis pulvinar purus. Vivamus et volutpat ipsum. Mauris sed finibus dolor. Sed cursus nisi eu diam tincidunt imperdiet. Etiam varius sapien eget arcu placerat suscipit. Nullam ut gravida quam. Sed accumsan eros ante, in consectetur nisi facilisis eget. Curabitur at risus sit amet risus finibus fermentum."
                    android:linksClickable="true"
                    android:minLines="5"
                    android:padding="16dp"
                    android:textColor="@color/colorTextPrimary"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="127dp" />

                <TextView
                    android:id="@+id/create_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:gravity="center"
                    android:text="Создать новую и прикрепить"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/add_fromExisting"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:gravity="center"
                    android:text="Прикрепить существующую"
                    android:textAlignment="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    android:gravity="center"
                    android:text="Нажмите на элемент чтобы открепить"
                    android:textAlignment="center"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/news_list"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_simple_list" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="72dp" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <FrameLayout
            android:id="@+id/like_view"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="end|bottom">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_done"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/ic_done_black_24dp"
                app:backgroundTint="@color/colorPrimaryDark"
                app:borderWidth="2dp" />
        </FrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/suggestion_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:visibility="gone"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_simple_list" />

        <FrameLayout
            android:id="@+id/news_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            android:visibility="gone">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center|top"
                android:layout_margin="4dp"
                android:scaleType="centerCrop"
                app:lottie_autoPlay="true"
                app:lottie_fileName="loader_food.json"
                app:lottie_loop="true" />
        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/code_layer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary">

            <EditText
                android:id="@+id/code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="56dp"
                android:hint="Code"
                android:inputType="number"
                android:maxLength="6"
                android:padding="24dp"
                android:textAlignment="center"
                android:textColor="@color/colorAccent"
                android:textSize="36sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.25" />

            <TextView
                android:id="@+id/btn_check_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="24dp"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:text="Если вы редактор - введите код чтобы получить доступ к редактированию. \n Если вы попали сюда случайно - вернитесь по кнопке назад."
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20dp"
                app:layout_constraintTop_toBottomOf="@+id/code"
                tools:layout_editor_absoluteX="24dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</LinearLayout>